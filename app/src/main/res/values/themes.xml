<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeepSave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colorPriority. -->
        <item name="colorPrimary">@color/medium_purple</item>
        <item name="colorPrimaryVariant">@color/jet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand colorPriority. -->
        <item name="colorSecondary">@color/eton_blue</item>
        <item name="colorSecondaryVariant">@color/ming</item>
        <item name="colorOnSecondary">@color/jet</item>
        <!-- Status bar colorPriority. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.KeepSave.Toolbar</item>
        <item name="bottomAppBarStyle">@style/Widget.KeepSave.BottomAppBar</item>
    </style>

    <style name="Theme.KeepSave.IdeasActivity" parent="Theme.KeepSave">
        <item name="android:statusBarColor">@color/medium_purple</item>
    </style>

    <style name="Theme.KeepSave.IdeasEditActivity" parent="Theme.KeepSave">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Widget.KeepSave.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.KeepSave.Toolbar</item>
    </style>

    <style name="ThemeOverlay.KeepSave.Toolbar" parent="">
        <item name="colorPrimary">@color/medium_purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.KeepSave.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.KeepSave.BottomAppBar</item>
    </style>

    <style name="ThemeOverlay.KeepSave.BottomAppBar" parent="">
        <item name="colorPrimary">@color/medium_purple</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>